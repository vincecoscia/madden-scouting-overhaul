// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Player {
  id        String      @id @default(cuid())
  playerID  String      @unique
  firstName      String
  lastName       String
  season   Season?      @relation(fields: [seasonId], references: [id])
  seasonId String?

  // ... other fields and relations
}

model Franchise {
  id        String      @id @default(cuid())
  name      String
  team      String
  seasons   Season[]

}

model Season {
  id        String      @id @default(cuid())
  year      Int
  franchise Franchise   @relation(fields: [franchiseId], references: [id])
  franchiseId String
  players   Player[]
  scouts    Scout[]
}

model Scout {
  id        String      @id @default(cuid())
  firstName      String
  lastName       String
  season   Season?      @relation(fields: [seasonId], references: [id])
  seasonId String?
  // ... other fields and relations
}
